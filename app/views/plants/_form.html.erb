<%= form_for @plant, html: { multipart: true } do |f| %>

  <%= @plant.errors.full_messages.join(', ') %>
  <div>
    <%= f.label :species_name %></br>
    <%= f.text_field :species_name %>
  </div>

  <div>
    Common name
    <%= f.fields_for :common_names do |c| %></br>
      <%= c.text_field :name %>
    <% end %>
  </div>

  <div>
    <%= f.label "City or Region" %></br>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label "Country" %> <small>(can select multiple)</small></br>
    <%= f.collection_select :country_ids, Country.order(country_name: :asc), :id, :country_name, {}, {multiple: true, class: 'chosen-select'} %>
  </div>

<!-- only admin and moderators can edit this as it should be automatically generated -->
  <div>
    <%= f.label "Climate Zone" %></br>
    <%= f.text_field :climate_zone %>
  </div>

  <div>
    <%= f.label :notes %><small>(any plant care tips can be listed here)</small></br>
    <%= f.text_area :notes %>
  </div>

  <%= f.fields_for :image do |t| %>
    <div>
      <%= f.label "Upload Images" %></br>
      <%= f.file_field :file, :multiple => true %>
    </div>
  <% end %>

  <%= f.submit "Submit" %>
<% end %>
