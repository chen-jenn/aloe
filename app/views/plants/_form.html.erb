<%= simple_form_for @plant, html: { multipart: true } do |f| %>

  <!-- <%= @plant.errors.full_messages.join(', ') %> -->
  <%= f.input :species_name, as: :string, required: false %>

  <div>
    Common name
    <%= f.fields_for :common_names do |common_name| %>*</br>
      <%= common_name.text_field :name %>
    <% end %>
  </div>

  <div>
    <%= f.label "City or Region" %></br>
    <%= f.text_field :city %>
  </div>

  <div>
    <!-- will need to restrict chosen fields later -->
    <%= f.label "Country" %>*<small>(select up to two)</small></br>
    <%= f.collection_select :country_ids, Country.order(country_name: :asc), :id, :country_name, {}, {multiple: true, class: 'chosen-select'} %>
  </div>

<!-- only admin and moderators can edit this as it should be automatically generated, remove this later -->
  <div>
    <%= f.label "Climate Zone" %></br>
    <%= f.text_field :climate_zone %>
  </div>

  <div>
    <%= f.label :notes %><small>(any plant care tips can be listed here)</small></br>
    <%= f.text_area :notes %>
  </div>

  <div>
    <%= f.label "Upload Images" %></br>
    <%= f.file_field :file, :multiple => true %>
  </div>

  <%= f.submit "Submit" %>
<% end %>
